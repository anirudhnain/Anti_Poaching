<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="#FFFFFF"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >




        <!-- Login Form -->
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"

            android:weightSum="1"
            android:id="@+id/assad">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create Animal"
                android:textSize="40dp"
                android:layout_marginBottom="20dip"


                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/tvDisplay"
                />

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1"
                android:shrinkColumns="0"
                >
            <TableRow
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip">
                <TextView

                    android:id="@+id/animalid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Animal-ID"
                    android:textColor="#372c24"
                    />
                <TextView android:id="@+id/animalidanswer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:gravity="right"
                    android:text="Name"
                    android:textColor="#372c24"
                    />
            </TableRow>

                <TableRow
                    android:layout_marginTop="20dip"
                    android:layout_marginBottom="20dip">
                    <TextView

                        android:id="@+id/createuserid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="User-ID"
                        android:textColor="#372c24"
                        />
                    <TextView android:id="@+id/createuseridanswer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:singleLine="true"
                        android:ellipsize="none"
                        android:gravity="right"
                        android:text="Name"
                        android:textColor="#372c24"
                        />
                </TableRow>
</TableLayout>



            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Species"
                android:layout_marginTop="20dip"/>
            <EditText android:layout_width="fill_parent"
                android:id="@+id/tspecies"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:singleLine="true"/>

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Gender"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"/>

            <Spinner
                android:id="@+id/SpinnerGenderType"
                android:layout_height="wrap_content"
                android:prompt="@string/gender"
                android:layout_width="fill_parent"
                android:entries="@array/gender"
                android:drawSelectorOnTop="true"
                android:layout_weight="0.25"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="20dip">
            </Spinner>

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
            <TableRow
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip">
                <TextView

                    android:id="@+id/dor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Date of Registration"
                    android:textColor="#372c24"
                    />
                <TextView android:id="@+id/doranswer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:ellipsize="none"
                    android:gravity="right"
                    android:text="Name"
                    android:textColor="#372c24"
                    />
            </TableRow>
</TableLayout>

            <TextView android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#372c24"
                android:text="Health Details"
                android:layout_marginTop="20dip"/>
            <EditText android:layout_width="fill_parent"
                android:id="@+id/thealth"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:layout_marginBottom="20dip"
                android:singleLine="true"/>

            <Button android:id="@+id/bcreateanimal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="Create"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:onClick="notify"/>



        </LinearLayout>

    </RelativeLayout>
</ScrollView>
